@model Flights.Data.Entities.Aircraft
@using Flights.Extensions
@{
    ViewData["Title"] = "Modifier un avion";
    string URLEdit = Url.Action("Modifier", "Aircrafts", new { @Id = Model.Id });
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Avions
            @*<small>Control panel</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i> Réservation de vols</a></li>
            <li class="active">Avions</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title">Modifier un avion</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form class="form-width-quarter" method="post" action="@URLEdit">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <partial name="_EditCreatePartial" />
                            @Html.Flights().FormDropDownListFor(m => m.Status, Html.GetEnumSelectList(typeof(Flights.Data.Entities.EntitiesEnums.EStatus)), "Veuillez sélectionner le statut de l'avion")

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Modifier</button>
                                <button id="btnCancel" type="button" class="btn btn-danger">Annuler</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
@section Scripts {
    <script>setControllerPath('@Url.Action(string.Empty, "Aircrafts")')</script>
    <script src="~/Administration/js/Aircrafts.js" asp-append-version="true"></script>
}
