@using Flights.Extensions
@model List<Flights.Data.Entities.Airport>
@{
    ViewData["Title"] = "Aéroports - Archives";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Aéroports
            @*<small>Control panel</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i> Réservation de vols</a></li>
            <li class="active">Aéroports</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Liste des aéroports archivés</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <button type="button" id="btnEdit" class="btn btn-primary">Modifier</button>
                    </div>
                    <div class="box-body table-responsive">
                        <table id="Airports" class="table table-bordered table-striped table-full-features">
                            <thead>
                                <tr>
                                    <th>Nom de l'aéroport</th>
                                    <th>Pays</th>
                                    <th>Latitude</th>
                                    <th>Longitude</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (Flights.Data.Entities.Airport airport in Model)
                                    {
                                        <tr id="@airport.Id">
                                            <td>@airport.AirportName</td>
                                            <td>@airport.AirportCountry</td>
                                            <td>@airport.Latitude</td>
                                            <td>@airport.Longitude</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
    <!-- /.main content -->
</div>
@section Scripts {
    <script>setControllerPath('@Url.Action(string.Empty, "Airports")')</script>
    <script src="~/Administration/js/Airports.js" asp-append-version="true"></script>
}
